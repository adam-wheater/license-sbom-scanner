{
  "name": "license-sbom-scanner",
  "version": "1.0.0",
  "description": "Azure DevOps extension for scanning repository dependencies, license compliance, and SBOM generation",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "package": "tfx extension create --manifest-globs vss-extension.json --output-path out",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "publish:marketplace": "tfx extension publish --manifest-globs vss-extension.json"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "azure-devops-extension-api": "^4.234.0",
    "azure-devops-extension-sdk": "^4.0.2",
    "azure-devops-ui": "^2.167.83",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "ajv": "^8.18.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "style-loader": "^4.0.0",
    "tfx-cli": "^0.23.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
